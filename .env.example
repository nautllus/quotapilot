# Copy to .env and adjust values as needed.
# The API reads these via environment (compose supplies them),
# but the current skeleton does not yet load them in code.

API_HOST=0.0.0.0
API_PORT=8000

# MongoDB connection string for local docker compose
MONGODB_URI=mongodb://mongo:27017/quotapilot
# Optional: tune pool sizes/timeouts
# MONGODB_MAX_POOL_SIZE=100
# MONGODB_MIN_POOL_SIZE=0
# MONGODB_CONNECT_TIMEOUT_MS=10000
# MONGODB_SOCKET_TIMEOUT_MS=20000
# MONGODB_WAIT_QUEUE_TIMEOUT_MS=0

# Mistral API configuration
MISTRAL_API_KEY=your_mistral_api_key_here
# Comma-separated allowlist of free-tier models for routing (optional)
MISTRAL_FREE_MODELS=mistral-tiny,open-mixtral-8x7b

# Optional environment name
ENV=development

